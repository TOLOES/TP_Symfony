{# templates/register.html.twig #}

{% extends 'img/base.html.twig' %}

{% block title %}Registration{% endblock %}

{% block body %}
    <div class="container mt-4">
        <div class="row">
            <div class="col-md-6 offset-md-3">
                <div class="card">
                    <div class="card-header">
                        <h1 class="h3 mb-0 text-center">Registration</h1>
                    </div>
                    <div class="card-body">
                        {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}

                        <div class="mb-3">
                            {{ form_label(form.login, 'Login', {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(form.login, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(form.login) }}
                        </div>

                        <div class="mb-3">
                            {{ form_label(form.password, 'Password', {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(form.password, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(form.password) }}
                        </div>

                        <div class="mb-3">
                            {{ form_label(form.confirmPassword, 'Confirm Password', {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(form.confirmPassword, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(form.confirmPassword) }}
                        </div>

                        <div class="mb-3">
                            {{ form_widget(form.submit, { 'attr': {'class': 'btn btn-primary'}, 'label': 'Register' }) }}
                        </div>

                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
